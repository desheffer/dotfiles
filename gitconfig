[core]
	editor = vim
	eol = lf
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
[merge]
	tool = vimdiff
	summary = true
[color]
	ui = auto
[color "branch"]
	current = yellow bold reverse
	local = yellow bold
	remote = green bold
[color "diff"]
	commit = yellow bold
	meta = white bold
	frag = cyan bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow bold
	changed = green bold
	untracked = cyan bold
[alias]
	changes = log --stat
	graph = log --graph --pretty=format:'%C(red)%h%Creset -%C(yellow bold)%d%Creset %s %C(green)(%cr) %C(blue bold)<%an>%Creset' --abbrev-commit --date=relative
	lines = diff --shortstat 4b825dc642cb6eb9a060e54bf8d69288fbee4904
	listlog = log --no-merges --pretty=format:%s
[diff]
	renamelimit = 4000
	compactionHeuristic = 1
[push]
	default = simple
[credential]
	helper = store
[include]
	path = ~/.gitconfig.local
